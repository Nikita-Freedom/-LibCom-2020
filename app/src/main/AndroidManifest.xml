<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.LibForumNew">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/web_hi_res_512"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name="net.smallacademy.tabs.ActivityAbout"
            android:parentActivityName="net.smallacademy.tabs.MainActivity" />

        <activity
            android:name="net.smallacademy.tabs.Place.ActivityPlaceInfo"
            android:parentActivityName="net.smallacademy.tabs.Place.PlaceActivity" />

        <activity android:name="net.smallacademy.tabs.RecipeActivity"
            android:parentActivityName="net.smallacademy.tabs.MainActivity"/>

        <activity
            android:name="net.smallacademy.tabs.Activities.LoginActivity"
            android:parentActivityName="net.smallacademy.tabs.MainActivity" />
        <activity
            android:name="net.smallacademy.tabs.Place.PlaceActivity"
            android:parentActivityName="net.smallacademy.tabs.MainActivity" />
        <activity
            android:name="net.smallacademy.tabs.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>